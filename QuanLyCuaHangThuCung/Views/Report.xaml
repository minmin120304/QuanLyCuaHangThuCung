<UserControl x:Class="QuanLyCuaHangThuCung.Views.Report"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:local="clr-namespace:QuanLyCuaHangThuCung.Views"
             mc:Ignorable="d" Height="414" Width="637">
    <Grid Background="#FFFCE3B4" Width="637" Height="414">
        <Label Content="Báo cáo" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,57,0,304">
            <Button Content="Khách hàng" Height="31" Width="71"/>
            <Button Content="Sản phẩm" Height="31" Width="70" Margin="40,0,40,0"/>
            <Button Content="Doanh thu" Height="31" Width="71" Click="DoanhThu_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,110,0,257" Width="318">
            <ComboBox Height="22" SelectedIndex="0" x:Name="ListDV" Margin="10">
                <ComboBoxItem>Theo tuần</ComboBoxItem>
                <ComboBoxItem>Theo tháng</ComboBoxItem>
                <ComboBoxItem>Theo năm</ComboBoxItem>
            </ComboBox>
            <ComboBox Height="22" SelectedIndex="0" x:Name="ListDV_Copy" Margin="10">
                <ComboBoxItem Content="Chọn tháng"/>
                <ComboBoxItem Content="Theo tháng"/>
                <ComboBoxItem Content="Theo năm"/>
            </ComboBox>
            <ComboBox Height="22" SelectedIndex="0" x:Name="ListDV_Copy1" Margin="10">
                <ComboBoxItem Content="Chọn năm"/>
                <ComboBoxItem Content="Theo tháng"/>
                <ComboBoxItem Content="Theo năm"/>
            </ComboBox>
        </StackPanel>

        <oxy:PlotView Model="{Binding RevenueChart}" Margin="51,157,51,164" Width="535"/>
        
        <DataGrid x:Name="DoanhThuTable" Margin="54,263,69,22">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tháng" Binding="{Binding Month}" Width="100"/>
                <DataGridTextColumn Header="Doanh thu (VND)" Binding="{Binding TotalRevenue, StringFormat=N0}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
