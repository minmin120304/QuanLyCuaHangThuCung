<UserControl x:Class="QuanLyCuaHangThuCung.Views.Bill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyCuaHangThuCung.Views"
             mc:Ignorable="d" Height="414" Width="680">

    <Border CornerRadius="20" Background="#FFFCE3B4" Padding="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Hoá đơn" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,14,0,363" Grid.RowSpan="2"/>

            <Grid Grid.Row="1" Margin="0,46,0,0" Grid.ColumnSpan="2">
                <StackPanel>
                    <TextBox x:Name="search_input" Width="200" Height="22"/>
                    <Button Content="Tìm kiếm" Background="#FF9FC7EE" Width="90" Height="30" Margin="0,0,0,10" Click="Search_Click" HorizontalAlignment="Right"/>
                </StackPanel>


            </Grid>
        </Grid>

    </Border>
</UserControl>
