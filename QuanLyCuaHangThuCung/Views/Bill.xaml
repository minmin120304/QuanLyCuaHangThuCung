<UserControl x:Class="QuanLyCuaHangThuCung.Views.Bill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyCuaHangThuCung.Views"
             mc:Ignorable="d" Height="414" Width="680">

    <Border CornerRadius="20" Background="#FFFCE3B4" Padding="8">
        <Grid Background="#FFFCE3B4">
            <TextBlock HorizontalAlignment="Left" Margin="318,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" FontSize="16" FontWeight="Bold" Grid.RowSpan="1"><Run Language="ja-jp" Text="Hoá đơn"/><LineBreak/><Run Language="ja-jp"/></TextBlock>

            <DataGrid x:Name="BillTable" 
                      AutoGenerateColumns="False" 
                      ItemsSource="{Binding Bill}" 
                      AlternatingRowBackground="#E3F2FD"
                      SelectionMode="Single" 
                      SelectionUnit="FullRow" 
                      BorderBrush="Gray" 
                      BorderThickness="1"
                      Background="White" 
                      RowHeaderWidth="0" 
                      HeadersVisibility="Column" 
                      SelectionChanged="DataGrid_SelectionChanged"
                      CanUserAddRows="False" Margin="12,111,8,51" 
                      AlternationCount="1000">
                <DataGrid.Resources>
                    <!-- Style căn giữa tiêu đề -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>

                    <!-- Style căn giữa nội dung -->
                    <Style TargetType="TextBlock">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="STT" MinWidth="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type DataGridRow}}, Path=AlternationIndex, Converter={StaticResource IndexConverter}}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTextColumn Header="Mã hoá đơn" Binding="{Binding Id}" MinWidth="50" Width="auto"/>
                    <DataGridTextColumn Header="Ngày nhập" Binding="{Binding Date}" MinWidth="80" Width="auto"/>
                    <DataGridTextColumn Header="Khách hàng" Binding="{Binding Customer}" MinWidth="200" Width="auto"/>
                    <DataGridTextColumn Header="Tổng tiền" Binding="{Binding Total, StringFormat=\{0:N0\} VND}" MinWidth="120" Width="auto"/>
                    <DataGridTextColumn Header="Ghi chú" Binding="{Binding Note}" MinWidth="120" Width="auto"/>
                </DataGrid.Columns>
            </DataGrid>
            <TextBox x:Name="SearchTextBox" HorizontalAlignment="Left" Margin="385,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154" Height="25" FontSize="14"/>
            <Button Content="Tìm" HorizontalAlignment="Left" Margin="553,49,0,0" VerticalAlignment="Top" Width="90" Height="25" Background="#FFD5AEFF" Click="Find_Click"/>
            <TextBlock HorizontalAlignment="Left" Margin="271,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" FontSize="16" FontWeight="Bold" Grid.RowSpan="1"><Run Language="ja-jp" Text="Danh sách hoá đơn"/><LineBreak/><Run Language="ja-jp"/></TextBlock>
            <Button Content="Thêm mới" HorizontalAlignment="Left" Margin="110,361,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FF9FC7EE" Click="Add_Click"/>
            <Button Content="Sửa" HorizontalAlignment="Left" Margin="237,361,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FFFAEE7F" Click="Edit_Click"/>
            <Button Content="Xoá" HorizontalAlignment="Left" Margin="362,361,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FFF47B60" Click="Delete_Click"/>
            <Button Content="Xuất file" HorizontalAlignment="Left" Margin="481,361,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FF73CE5E" Click="Export_Click"/>
            <Button Content="Xem chi tiết" HorizontalAlignment="Left" Margin="540,361,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FFFFAA54" Click="Detail_Click"/>
        </Grid>
    </Border>
</UserControl>
