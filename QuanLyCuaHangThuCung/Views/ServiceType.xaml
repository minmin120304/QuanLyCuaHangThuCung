<UserControl x:Class="QuanLyCuaHangThuCung.Views.ServiceType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyCuaHangThuCung.Views"
             mc:Ignorable="d" Height="450">

    <Border CornerRadius="20" Background="#FFFCE3B4" Padding="8">
        <Grid Background="#FFFCE3B4" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Form nhập liệu -->
            <Border Grid.Row="0" Padding="10" CornerRadius="10" Background="White" Margin="10">
                <StackPanel>
                    <TextBlock Text="Loại hình dịch vụ" FontWeight="Bold" FontSize="16"/>
                    <WrapPanel HorizontalAlignment="Center">
                        <StackPanel Margin="10">
                            <TextBlock Text="Mã loại hình:" Margin="0,0,0,5"/>
                            <TextBox x:Name="maLH_input" Width="100" Height="22"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="Tên loại hình:" Margin="0,0,0,5"/>
                            <TextBox x:Name="tenLH_input" Width="80" Height="22"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="Ghi chú:" Margin="0,0,0,5"/>
                            <TextBox x:Name="note_input" Width="250" Height="22"/>
                        </StackPanel>
                    </WrapPanel>

                    <WrapPanel HorizontalAlignment="Center" Margin="10">
                        <Button Content="Thêm mới" Background="#FF9FC7EE" Width="90" Height="30" Margin="0,10,30,0" Click="Add_Click"/>
                        <Button Content="Sửa" Background="#FFFAEE7F" Width="90" Margin="5,10,30,0" Click="Edit_Click"/>
                        <Button Content="Xoá" Background="#FFF47B60" Width="90" Margin="5,10,0,0" Click="Delete_Click"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <!-- Danh sách sản phẩm -->
            <Grid Grid.Row="1" Margin="10,0,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Chỉ cho tiêu đề -->
                    <RowDefinition Height="*"/>
                    <!-- Dành không gian còn lại cho DataGrid -->
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Danh sách loại hình dịch vụ" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" CanContentScroll="True">
                    <DataGrid x:Name="ServiceTypeTable" 
                              AutoGenerateColumns="False" 
                              ItemsSource="{Binding Service}" 
                              AlternatingRowBackground="#E3F2FD"
                              SelectionMode="Single" 
                              SelectionUnit="FullRow" 
                              BorderBrush="Gray" 
                              BorderThickness="1"
                              Background="White" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch" 
                              RowHeaderWidth="0" 
                              HeadersVisibility="Column" 
                              SelectionChanged="DataGrid_SelectionChanged"
                              CanUserAddRows="False" >
                        <DataGrid.Resources>
                            <!-- Style căn giữa tiêu đề -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>

                            <!-- Style căn giữa nội dung -->
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="STT" Binding="{Binding Id}" MinWidth="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Mã loại hình" Binding="{Binding typeID}" MinWidth="80" Width="*"/>
                            <DataGridTextColumn Header="Tên loại hình" Binding="{Binding typeName}" MinWidth="180" Width="*"/>
                            <DataGridTextColumn Header="Ghi chú" Binding="{Binding note}" MinWidth="250" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>
</UserControl>
