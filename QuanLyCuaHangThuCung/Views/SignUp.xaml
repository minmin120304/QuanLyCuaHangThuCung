<Window x:Class="QuanLyCuaHangThuCung.Views.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký" Height="390" Width="400" ResizeMode="NoResize">
    <Grid Width="400" Margin="0,0,0,0">
        <TextBlock Text="Đăng ký" HorizontalAlignment="Center" FontSize="36" FontFamily="Sitka Small" FontWeight="Bold" Margin="0,37,0,290" Width="158"/>
        <TextBlock Text="Email:" Margin="83,145,278,209" FontSize="14"/>
        <TextBox x:Name="txtEmail" Width="200" Height="25" Margin="127,122,73,188"/>

        <TextBlock Text="Tài khoản:" Margin="56,179,278,176" FontSize="14"/>
        <TextBox x:Name="txtUsername" Width="200" Height="25" Margin="127,156,73,154"/>

        <TextBlock Text="Mật khẩu:" Margin="57,213,278,140" FontSize="14"/>
        <PasswordBox x:Name="txtPassword" Width="200" Height="25" Margin="127,190,73,120"/>

        <TextBlock Text="Nhập lại:" Margin="62,247,279,107" FontSize="14"/>
        <PasswordBox x:Name="txtConfirmPassword" Width="200" Height="25" Margin="127,224,73,86"/>

        <Button Content="Đăng ký" Margin="246,285,54,55" Click="Register_Click" Background="#FFFFE580" BorderThickness="0" FontSize="14"/>
        <TextBlock Text="Bạn đã có tài khoản?" Margin="30,297,254,62"/>
        <Button Content="Đăng nhập" Height="30" Margin="142,290,182,54" Click="Login_Click" Background="{x:Null}" BorderThickness="0" Foreground="#FF3B39DC"/>
        <TextBlock Text="Họ và tên:" Margin="57,110,278,243" FontSize="14"/>
        <TextBox x:Name="txtFullName" Width="200" Height="25" Margin="127,89,73,221"/>
    </Grid>
</Window>