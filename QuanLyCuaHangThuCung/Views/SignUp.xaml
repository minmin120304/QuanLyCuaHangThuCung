<Window x:Class="QuanLyCuaHangThuCung.Views.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng ký" Height="350" Width="400" ResizeMode="NoResize">
    <Grid Width="400" Height="335">
        <TextBlock Text="Đăng ký" HorizontalAlignment="Left" FontSize="36" FontFamily="Sitka Small" FontWeight="Bold" Margin="127,19,0,266" Width="158"/>
        <TextBlock Text="Tài khoản:" Margin="54,93,279,224" FontSize="14"/>
        <TextBox x:Name="txtUsername" Width="200" Height="25" Margin="127,90,73,219"/>

        <TextBlock Text="Mật khẩu:" Margin="54,131,279,187" FontSize="14"/>
        <PasswordBox x:Name="txtPassword" Width="200" Height="25" Margin="127,127,73,182"/>

        <TextBlock Text="Nhập lại:" Margin="54,168,279,149" FontSize="14"/>
        <PasswordBox x:Name="txtConfirmPassword" Width="200" Height="25" Margin="127,164,73,145"/>

        <Button Content="Đăng ký" Margin="165,214,135,85" Click="Register_Click" Background="#FFFFE580" BorderThickness="0" FontSize="14"/>
        <TextBlock Text="Bạn đã có tài khoản?" Margin="62,269,222,48"/>
        <Button Content="Đăng nhập" Width="90" Height="30" Margin="177,261,133,43" Click="Login_Click" Background="{x:Null}" BorderThickness="0" Foreground="#FF3B39DC"/>
    </Grid>
</Window>
