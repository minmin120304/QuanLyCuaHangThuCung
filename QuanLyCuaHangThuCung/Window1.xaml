<Window x:Class="QuanLyCuaHangThuCung.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCuaHangThuCung"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="637" Background="#FFFCE3B4">
    <Grid Background="#FFFCE3B4">
        <TextBlock HorizontalAlignment="Left" Margin="318,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" FontSize="16" FontWeight="Bold" Grid.RowSpan="1"><Run Language="ja-jp" Text="Hoá đơn"/><LineBreak/><Run Language="ja-jp"/></TextBlock>

        <DataGrid x:Name="EmployeeTable" AutoGenerateColumns="False" ItemsSource="{Binding Employee}" AlternatingRowBackground="#E3F2FD"
            SelectionMode="Single" SelectionUnit="FullRow" BorderBrush="Gray" BorderThickness="1"
            Background="White" 
            RowHeaderWidth="0" HeadersVisibility="Column" SelectionChanged="DataGrid_SelectionChanged"
            CanUserAddRows="False" Margin="10,182,299,34" >
            <DataGrid.Resources>
                <!-- Style căn giữa tiêu đề -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>

                <!-- Style căn giữa nội dung -->
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>
                <DataGridTextColumn Header="STT" Binding="{Binding Id}" MinWidth="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Mã hoá đơn" Binding="{Binding employeeName}" MinWidth="50" Width="auto"/>
                <DataGridTextColumn Header="Ngày nhập" Binding="{Binding address}" MinWidth="50" Width="auto"/>
                <DataGridTextColumn Header="Khách hàng" Binding="{Binding phoneNum}" MinWidth="120" Width="auto"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding phoneNum}" MinWidth="80" Width="auto"/>
                <DataGridTextColumn Header="Trạng thái" Binding="{Binding phoneNum}" MinWidth="80" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Thêm mới" HorizontalAlignment="Left" Margin="59,37,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FF9FC7EE"/>
        <Button Content="Sửa" HorizontalAlignment="Left" Margin="59,75,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FFFAEE7F"/>
        <Button Content="Xoá" HorizontalAlignment="Left" Margin="183,37,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FFF47B60"/>
        <Button Content="Xuất file" HorizontalAlignment="Left" Margin="183,75,0,0" VerticalAlignment="Top" Width="90" Height="30" Background="#FF73CE5E"/>
        <TextBox HorizontalAlignment="Left" Margin="37,117,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="154" Height="25" FontSize="14"/>
        <Button Content="Tìm" HorizontalAlignment="Left" Margin="205,117,0,0" VerticalAlignment="Top" Width="90" Height="25" Background="#FFD5AEFF"/>
        <TextBlock HorizontalAlignment="Left" Margin="95,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" FontSize="16" FontWeight="Bold" Grid.RowSpan="1"><Run Language="ja-jp" Text="Danh sách hoá đơn"/><LineBreak/><Run Language="ja-jp"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="440,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" FontSize="16" FontWeight="Bold" Grid.RowSpan="1"><Run Language="ja-jp" Text="Chi tiết hoá đơn"/><LineBreak/><Run Language="ja-jp"/></TextBlock>
        <ComboBox SelectedIndex="0" HorizontalAlignment="Left" Margin="70,405,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem>Theo ngày nhập</ComboBoxItem>
            <ComboBoxItem>Theo trạng thái</ComboBoxItem>
            <ComboBoxItem>Khoảng giá</ComboBoxItem>
        </ComboBox>
        <ComboBox SelectedIndex="0" HorizontalAlignment="Left" Margin="209,405,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem>Mới nhất</ComboBoxItem>
            <ComboBoxItem>Cũ nhất</ComboBoxItem>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="25,405,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22" FontSize="16" FontWeight="Bold" Grid.RowSpan="1"><Run Language="ja-jp" Text="Lọc:"/><LineBreak/><Run Language="ja-jp"/></TextBlock>

        <!--Chi tiết hoá đơn-->
        <TextBlock HorizontalAlignment="Left" Margin="405,68,0,0" TextWrapping="Wrap" Text="Mã hoá đơn" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="495,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="405,99,0,0" TextWrapping="Wrap" Text="Ngày nhập" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="495,95,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="405,131,0,0" TextWrapping="Wrap" Text="Tên khách hàng" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="495,127,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="24"/>
        <ComboBox HorizontalAlignment="Left" Margin="441,163,0,0" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
